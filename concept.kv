BoxLayout:
    orientation: "horizontal"

    Splitter:
        sizable_from: "right"
        min_size: self.strip_size + 1
        max_size: self.parent.width

        BoxLayout:
            orientation: "vertical"
            GridLayout:
                cols: 2
                size_hint_y: None
                height: "80sp"

                Label:
                    text: "Volume"
                    size_hint_y: None
                    height: "40sp"
                    size_hint_x: None
                VolumeSlider:
                    min: 0
                    max: 1
                    height: "36sp"
                    size_hint_y: None
                Label:
                    text: "Plot"
                    size_hint_y: None
                    height: "40sp"
                    size_hint_x: None
                PlotSwitch:
                    text: "Plot"
                    size_hint_y: None
                    height: "40sp"
            Plot:
                opacity: 1 if self.active else .1

    Avatar:
